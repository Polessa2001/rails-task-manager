<div class = "container-sm">
  <ul class="list-group">
  <% @tasks.each do |task| %>
    <li class = "list-group-item p-2 m-2 rounded text-align-center text-center">
      <h2><%= link_to task.title, task_path(task) %>
      <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title} ?"} do %>
      <i class="fa-solid fa-trash-can delete-link"></i>
      <% end %>
    </li>
  <% end %>
</ul>
</div>
<%= link_to "Add a new task", new_task_path %>
